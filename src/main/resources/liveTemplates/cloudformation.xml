<?xml version="1.0" encoding="UTF-8"?>
<templateSet group="AWS CloudFormation">

  <template name="ref" value='{ "Ref": "$VAL$" }'
            resource-bundle="com.intellij.aws.cloudformation.CloudFormationBundle" key="livetemplate.description.ref">
    <variable name="VAL" expression="complete()" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="AWS_CLOUD_FORMATION_JSON" value="true" />
    </context>
  </template>

  <template name="ref" value='!Ref $VAL$'
            resource-bundle="com.intellij.aws.cloudformation.CloudFormationBundle" key="livetemplate.description.ref">
    <variable name="VAL" expression="complete()" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="AWS_CLOUD_FORMATION_YAML" value="true" />
    </context>
  </template>

</templateSet>